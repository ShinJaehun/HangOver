<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">댓글 수정하기</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/restaurants/<%= restaurant_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">제출하기</button>
                </div>
            </form>
            <a href="/restaurants">뒤로 가기</a>
        </div>
    </div>
</div>

