<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">수정 : <%= restaurant.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="editing_restaurant[name]" value="<%= restaurant.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="editing_restaurant[phone]" value="<%= restaurant.phone %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="editing_restaurant[address]" value="<%= restaurant.address %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="editing_restaurant[image]" value="<%= restaurant.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="editing_restaurant[description]" value="<%= restaurant.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">수정하기</button>
                </div>
            </form>
            <a href="/restaurants">뒤로 가기</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>